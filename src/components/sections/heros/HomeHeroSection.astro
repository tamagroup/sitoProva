---
import { Icon } from 'astro-icon/components';
import { Container, Button } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import {ThemeSwitcher} from '../../theme-switcher/theme-switcher';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1>Il cielo è la nostra prospettiva, la precisione la nostra missione.</h1>
				<p>
					Società che offre servizi di ispezioni, termografie e mappature con UAV.
				</p>
				<div class="hero-btns__container">
					<Button href="http://wa.me/393520808083" customIcon
						>Contattaci su WhatsApp
						<Fragment slot="icon">
							<Icon name="ic:baseline-chevron-right"/>
						</Fragment>
					</Button>
				</div>
        {settings.enableThemeSwitcher && <ThemeSwitcher client:only/>}
		</div>
	</section>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(60vh, 80vw, calc(70vh - var(--navbar-height)));
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem 1rem;
	}
	.hero-section__text {
		max-width: 600px;
		width: 100%;
	}
	.hero-section__text h1 {
		font-size: var(--font-size-hero);
		margin-bottom: 1.5rem;
		line-height: 1.1;
	}
	.hero-section__text p {
		font-size: var(--font-size-lg);
		margin-bottom: 2rem;
		line-height: 1.6;
		opacity: 0.9;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
	}
	.hero-btns__container :global(.btn) {
		padding: 1.2rem 2.5rem;
		font-size: var(--font-size-lg);
		font-weight: 600;
		border-radius: 3rem;
		text-transform: none;
		letter-spacing: 0.5px;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
	}
	.hero-btns__container :global(.btn):hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			min-height: clamp(50vh, 70vw, calc(60vh - var(--navbar-height)));
			padding: 1.5rem 0.5rem;
		}
		.hero-section__text {
			max-width: 100%;
		}
		.hero-section__text h1 {
			margin-bottom: 1rem;
		}
		.hero-section__text p {
			margin-bottom: 1.5rem;
		}
	}
	@media (max-width: 480px) {
		.hero-section__section {
			min-height: clamp(40vh, 60vw, calc(50vh - var(--navbar-height)));
			padding: 1rem 0.25rem;
		}
		.hero-btns__container {
			flex-direction: column;
			width: 100%;
		}
		.hero-btns__container :global(.btn) {
			width: 100%;
			max-width: 320px;
			padding: 1rem 2rem;
			font-size: var(--font-size-base);
		}
	}
</style>