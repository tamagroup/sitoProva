---
const { href, imgSrc, title, noShadow = false, imgWidth, imgHeight, noMarginTop = false, noImage = false } = Astro.props;
---

<style>
  .feature-card__card {
    background-color: var(--theme-surface-1);
    color: var(--theme-on-surface-1);
    border-radius: var(--theme-shape-radius);
    transition: transform var(--theme-transition);
    overflow: hidden;
  }
  .feature-card__card:hover {
    transform: translateY(-2px);
  }
  .feature-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  .featured-card__content {
    padding: 1rem 1rem 1.5rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow-y: hidden;
    min-height: 200px;
  }
  .feature-card__no-image .featured-card__content {
    min-height: 150px;
    justify-content: center;
  }
  .feature-card__no-margin-top .featured-card__content {
    padding-top: 1.0rem;
  }
  .featured-card__content picture {
    width: 100%;
    height: 100%;
    flex-shrink: 0;
  }
  .feature-card__no-margin-top .featured-card__content picture {
    width: 90%;
    margin: 0 auto;
  }
  .feature-card__card .feature-card__img {
    --image-shadow: 0 -0.5rem 1rem rgba(138, 138, 138, 0.12);
    margin: 0 auto;
    width: clamp(60%, 80%, 480px);
    height: auto;
    object-fit: cover;
    box-shadow: none;
    transform: translateY(0.5rem);
    transition: transform var(--theme-transition);
  }
  .feature-card__img--no-shadow {
    box-shadow: none;
  }
  .feature-card__card:hover .feature-card__img {
    transform: translateY(0);
  }
  .feature-card__no-margin-top .feature-card__img {
    transform: translateY(0);
  }
  .feature-card__title {
    font-family: var(--theme-font-family-serif);
    font-weight: 600;
    font-size: var(--font-size-lg);
    letter-spacing: 0.2px;
    line-height: 1.2;
    margin-bottom: 1rem;
    text-align: center;
    padding: 0 0.5rem;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .featured-card__content {
      padding: 0.75rem 0.75rem 1rem 0.75rem;
      min-height: 180px;
    }
    .feature-card__no-image .featured-card__content {
      min-height: 120px;
    }
    .feature-card__no-margin-top .featured-card__content {
      padding-top: 0.75rem;
    }
    .feature-card__title {
      font-size: var(--font-size-md);
      margin-bottom: 0.75rem;
      padding: 0 0.25rem;
    }
    .feature-card__card .feature-card__img {
      width: clamp(70%, 85%, 400px);
    }
    .feature-card__no-margin-top .feature-card__content picture {
      width: 85%;
    }
  }
  
  @media (max-width: 480px) {
    .featured-card__content {
      padding: 0.5rem 0.5rem 0.75rem 0.5rem;
      min-height: 160px;
    }
    .feature-card__no-image .featured-card__content {
      min-height: 100px;
    }
    .feature-card__no-margin-top .featured-card__content {
      padding-top: 0.5rem;
    }
    .feature-card__title {
      font-size: var(--font-size-base);
      margin-bottom: 0.5rem;
    }
    .feature-card__card .feature-card__img {
      width: clamp(75%, 90%, 350px);
    }
    .feature-card__no-margin-top .featured-card__content picture {
      width: 80%;
    }
  }
</style>


<div class={`feature-card__card${noMarginTop ? ' feature-card__no-margin-top' : ''}${noImage ? ' feature-card__no-image' : ''}`}>
  <a class="feature-card__link" href={href}>
    <div class="featured-card__content">
      <h3 class="feature-card__title">{title}</h3>
      {!noImage && imgSrc && (
        <!-- I would like to swap this out with Astro's Image integration soon but was having some issues with it at the moment so we're going old school here. -->
        <picture style={imgWidth && imgHeight ? `width:${imgWidth}px;height:${imgHeight}px;` : undefined}>
          <source srcset={`${imgSrc}.webp`} type="image/webp" >
          <img class={`feature-card__img${noShadow ? ' feature-card__img--no-shadow' : ''}`} src={`${imgSrc}.png`} alt={title} loading="lazy" width={imgWidth ?? 780} height={imgHeight ?? 585} decoding="async" style={imgWidth && imgHeight ? `width:${imgWidth}px;height:${imgHeight}px;object-fit:contain;` : undefined} >
        </picture>
      )}
    </div>
  </a>
</div> 

