---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Iscrizione Completata | SkyMetric',
	description: 'Grazie per esserti iscritto alla nostra newsletter!',
};
---

<Layout seo={seo}>
	<Container>
		<section class="thank-you__section">
			<div class="thank-you__content">
				<h1>Iscrizione Completata!</h1>
				<p>
					Grazie per esserti iscritto alla nostra newsletter. Riceverai aggiornamenti sui nostri servizi e novit√†.
				</p>
				<p>
					Se hai domande o hai bisogno di assistenza, non esitare a contattarci:
				</p>
				<div class="contact-info">
					<p><strong>Email:</strong> <a href="mailto:info@skymetric.it">info@skymetric.it</a></p>
					<p><strong>Telefono:</strong> <a href="tel:3520808083">3520808083</a></p>
				</div>
				<div class="thank-you__actions">
					<a href="/" class="btn btn--primary">Torna alla Home</a>
				</div>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.thank-you__section {
		margin: var(--section-margin) auto;
		min-height: calc(90vh - var(--navbar-height));
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.thank-you__content {
		text-align: center;
		max-width: 600px;
		padding: 2rem;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.thank-you__content h1 {
		color: var(--theme-primary);
		margin-bottom: 1rem;
	}
	.contact-info {
		margin: 2rem 0;
		padding: 1rem;
		background-color: var(--theme-surface-2);
		border-radius: var(--theme-shape-radius);
	}
	.contact-info p {
		margin: 0.5rem 0;
	}
	.contact-info a {
		color: var(--theme-primary);
		text-decoration: none;
	}
	.contact-info a:hover {
		text-decoration: underline;
	}
	.thank-you__actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
	}
	.btn {
		padding: 0.75rem 1.5rem;
		border-radius: var(--theme-button-border-radius);
		text-decoration: none;
		font-weight: 600;
		transition: var(--theme-transition);
		display: inline-block;
	}
	.btn--primary {
		background-color: var(--theme-primary);
		color: var(--theme-on-primary);
	}
	.btn--primary:hover {
		background-color: var(--theme-primary-hover);
	}
	@media (max-width: 768px) {
		.thank-you__actions {
			flex-direction: column;
			align-items: center;
		}
		.btn {
			width: 100%;
			max-width: 300px;
		}
	}
</style>
