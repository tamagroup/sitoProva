---
import { Container, FeatureCard } from '@components/odyssey-theme';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<h2>I nostri servizi</h2>
			<div class="feature-card__grid">
				<FeatureCard href="/landing-pages/landing-3" title="Ispezioni aeree" imgSrc="/assets/images/home/screenshots/ispezioni" noShadow imgWidth={637} imgHeight={480} noMarginTop>
				</FeatureCard>
				<FeatureCard href="/landing-pages/landing-2" title="Mappatura 3d" imgSrc="/assets/images/home/screenshots/zenmuse-l2" noShadow>
				</FeatureCard>
				<FeatureCard href="/landing-pages/landing-1" title="Termografie" imgSrc="/assets/images/home/screenshots/termografie" noShadow>
				</FeatureCard>
				<FeatureCard href="/landing-pages/landing-4" title="Agricoltura mirata" imgSrc="/assets/images/home/screenshots/agras" noShadow imgWidth={637} imgHeight={480} noMarginTop>
				</FeatureCard>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Pagine informative</h2>
			<div class="feature-card__grid">
				<FeatureCard href="/company/about" title="Chi siamo" noMarginTop noImage>
				</FeatureCard>
				<FeatureCard href="/company/contact" title="Contattaci" noMarginTop noImage>
				</FeatureCard>
				<FeatureCard
					href="/company/legal"
					title="Informazioni legali"
					noMarginTop
					noImage
				>
				</FeatureCard>
			</div>
		</section>
	</Container>

</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
		padding: 0 1rem;
	}
	.feature-card__section h2 {
		text-align: center;
		margin-bottom: 1rem;
	}
	.feature-card__section p {
		text-align: center;
		margin-bottom: 2rem;
		opacity: 0.8;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
		max-width: 1200px;
		margin: 0 auto;
	}
	@media (max-width: 768px) {
		.feature-card__section {
			margin: 2rem auto;
			padding: 0 0.5rem;
		}
		.feature-card__grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		.feature-card__section h2 {
			font-size: clamp(1.5rem, 4vw, 2rem);
		}
		.feature-card__section p {
			font-size: clamp(0.9rem, 2.5vw, 1rem);
		}
	}
	@media (max-width: 480px) {
		.feature-card__section {
			margin: 1.5rem auto;
			padding: 0 0.25rem;
		}
		.feature-card__grid {
			gap: 1rem;
		}
	}
</style>
