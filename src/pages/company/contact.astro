---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Contattaci | Astro Odyssey Theme',
	description: 'Pagina Contatti',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Contattaci</h1>
				<p>
					Potete contattarci tramite WhatsApp al numero 3520808083 o tramite mail o usando il box qui a fianco o scrivendo a info@skymetric.
				</p>
				<div>
					<p>
						<em><a href="tel:3520808083">3520808083</a></em> â€¢ <em
							><a href="mailto:info@skymetric.it">info@skymetric.it</a
							></em
						>
					</p>
				</div>
			</div>
			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.contact-hero__text-section h1 {
		margin-bottom: 1rem;
		font-size: clamp(1.5rem, 4vw, 2.5rem);
	}
	.contact-hero__text-section p {
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 1rem;
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
			gap: 2rem;
			min-height: auto;
		}
		.contact-hero__text-section {
			padding: 1.5rem;
			order: 2;
		}
		.col-2__container {
			order: 1;
			padding: 0;
		}
	}
	@media (max-width: 480px) {
		.contact-hero__text-section {
			padding: 1rem;
		}
		.contact-hero__text-section h1 {
			font-size: 1.8rem;
		}
	}
</style>
